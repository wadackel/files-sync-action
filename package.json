{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "typecheck//": "See https://github.com/vitejs/vite/issues/11552",
    "typecheck": "tsc --skipLibCheck",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest",
    "test:watch": "pnpm run test --watch",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "pnpm lint --fix",
    "generate": "run-s generate:* format",
    "generate:inputs": "tsx ./scripts/generate-inputs.ts",
    "generate:docs": "gha-docgen",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,yml,json}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "import/no-unresolved": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "never"
        }
      ]
    },
    "root": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ],
    "preset": "angular"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "deepmerge-ts": "^5.1.0",
    "ejs": "^3.1.9",
    "fast-glob": "^3.2.12",
    "fp-ts": "^2.13.1",
    "micromatch": "^4.0.5",
    "yaml": "^2.2.1",
    "zod": "^3.21.4",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-angular": "17.6.5",
    "@types/ejs": "3.1.2",
    "@types/is-base64": "1.1.1",
    "@types/micromatch": "4.0.2",
    "@types/node": "18.16.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "@vercel/ncc": "0.31.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.28.0",
    "gha-docgen": "1.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.5",
    "semantic-release": "21.0.7",
    "ts-dedent": "2.2.0",
    "ts-morph": "19.0.0",
    "tsx": "3.12.7",
    "type-fest": "3.13.1",
    "typescript": "5.1.6",
    "vitest": "0.34.1"
  },
  "packageManager": "pnpm@8.6.12"
}
