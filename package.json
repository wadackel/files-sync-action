{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "typecheck//": "See https://github.com/vitejs/vite/issues/11552",
    "typecheck": "tsc --skipLibCheck",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "pnpm run test --watch",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "pnpm lint --fix",
    "generate": "run-s generate:* format",
    "generate:inputs": "tsx ./scripts/generate-inputs.ts",
    "generate:docs": "gha-docgen",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,yml,json}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "semantic-release-major-tag"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "deepmerge-ts": "^5.1.0",
    "ejs": "^3.1.9",
    "fast-glob": "^3.2.12",
    "fp-ts": "^2.13.1",
    "micromatch": "^4.0.5",
    "yaml": "^2.2.1",
    "zod": "^3.21.4",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "9.9.1",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/github": "10.1.7",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/ejs": "3.1.5",
    "@types/eslint__js": "8.42.3",
    "@types/is-base64": "1.1.3",
    "@types/micromatch": "4.0.9",
    "@types/node": "20.15.0",
    "@vercel/ncc": "0.38.1",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "gha-docgen": "1.0.1",
    "globals": "15.9.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.9",
    "npm-run-all2": "5.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.2",
    "semantic-release": "24.1.0",
    "semantic-release-major-tag": "0.3.2",
    "ts-dedent": "2.2.0",
    "ts-morph": "23.0.0",
    "tsx": "4.17.0",
    "type-fest": "3.13.1",
    "typescript": "5.5.4",
    "typescript-eslint": "8.2.0",
    "vitest": "2.0.5"
  },
  "packageManager": "pnpm@9.8.0"
}
